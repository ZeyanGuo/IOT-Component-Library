{
  "name": "iot-component-library",
  "version": "1.0.0",
  "description": "This is a iot vue component library",
  "main": "index.js",
  "author": "Zeyan.Guo",
  "license": "MIT",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "start": "lerna bootstrap && node build/watch.js",
    "start:storybook": "start-storybook -p 6006",
    "build": "yarn build:component && yarn build:bundle && yarn build:storybook",
    "build:component": "webpack --config build/webpack.component.js",
    "build:bundle": "webpack --config build/webpack.common.js",
    "build:storybook": "build-storybook",
    "publish:lerna": "lerna publish",
    "lint": "eslint --ext .jsx,.js,.vue {packages,stories}/**",
    "fix": "eslint --fix --ext .jsx,.js,.vue {packages,stories}/**",
    "cz": "git-cz"
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/core": "^7.12.13",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@storybook/addon-actions": "^6.1.16",
    "@storybook/addon-essentials": "^6.1.16",
    "@storybook/addon-links": "^6.1.16",
    "@storybook/vue": "^6.1.16",
    "@vue/cli-plugin-babel": "^4.0.0",
    "@vue/eslint-config-prettier": "^6.0.0",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "chalk": "^4.1.0",
    "commitizen": "^4.2.3",
    "css-loader": "^5.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "echarts": "^5.0.2",
    "element-ui": "^2.13.2",
    "eslint": "^7.11.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-vue": "^7.0.1",
    "husky": "^4.3.8",
    "iconv-lite": "^0.6.2",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "progress-bar-webpack-plugin": "^2.1.0",
    "sass": "^1.32.6",
    "sass-loader": "^10.1.1",
    "style-loader": "^2.0.0",
    "vue": "^2.6.10",
    "vue-loader": "^15.9.6",
    "vue-style-loader": "^4.1.2",
    "vue-template-compiler": "^2.6.12",
    "webpack": "^4.46.0",
    "webpack-cli": "^4.5.0",
    "webpack-merge": "^5.7.3",
    "webpack-node-externals": "^2.5.2"
  },
  "peerDependencies": {
    "element-ui": "^2.13.2",
    "vue": "^2.6.10"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "node": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "vue"
    ],
    "rules": {}
  },
  "lint-staged": {
    "*.{,js,jsx,vue}": [
      "yarn fix"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "workspaces": [
    "packages/*"
  ]
}
